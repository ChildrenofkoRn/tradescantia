tr.review-short[data-review-id=review.id]
    td.title= link_to review.title, review, class: 'link-review'
    td= review.author.username
    td.rank
      span.ranks-avg
        = review.stat.rank_avg.round(2)
      span.ranks-star
        i.bi.bi-star-fill
      span.ranks-grade
       = ranks_grade(review.stat.rank_avg)
